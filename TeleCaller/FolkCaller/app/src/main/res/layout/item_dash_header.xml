<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/gradient_dash_header"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/img_todays_task"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_phone_in_talk_black_24dp"
        android:tint="@color/colorLightBlue"
        app:layout_constraintBottom_toTopOf="@+id/tv_todays_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_todays_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Today's Task"
        android:textAllCaps="true"
        android:textColor="@color/colorLightBlue"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_todays_task_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_todays_task" />

    <TextView
        android:id="@+id/tv_todays_task_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textColor="@color/colorLightBlue"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_todays_task_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_todays_task" />

    <TextView
        android:id="@+id/tv_todays_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Contacts"
        android:textColor="@color/colorLightBlue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_todays_task_count" />

</androidx.constraintlayout.widget.ConstraintLayout>